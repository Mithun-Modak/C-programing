#include<stdio.h>
int main()
{
    while (1)
    {

        int n,t,i;
        printf("enter  n :  ");
        scanf("%d",&n);
        printf("enter  t :  ");
        scanf("%d",&t);

        for(i=1; i<=t; i=i+1)
        {

            printf("%d  +  %d = %d\n ",n,i,n+i);



        }


        for(i=1; i<=t; i=i+1)
        {

            printf("%d  -  %d = %d\n ",n,i,n-i);



        }






    }
